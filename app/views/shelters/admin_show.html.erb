<head>
<style>
  table, th, td {
  border: 1px solid black;
  border-collapse: collapse;
}
  th, td {
  padding: 15px;
  text-align: center;
}
</style>
</head>
<table>
  <tr>
    <th>Name</th>
    <th>City</th>
  </tr>
  <tr id="shelter_<%= @shelter.name %>">
    <td><%= "#{@shelter.name}" %></td>
    <td><%= "#{@shelter.city}" %></td>
  </tr>
</table>

<h3>Shelter Statistics</h3>
  <div id="shelter_stats_<%=@shelter.name%>" >
  <ul>
    <li> <%= "Average Age of Adoptable Pets: #{@avg_age}" %> </li>
    <li> <%= "Number of Adoptable Pets: #{@count_adoptable}" %> </li>
    <li> <%= "Number of Pets Adopted: #{@adopted_pet_count}"%> </li>
  </ul>
</div>

<div id="actionrequired"><h3>Action Required</h3>
<% @pending_pets_list.each do |pet| %>
  <% unless pet.pet_status %>
    <p>
    <%= link_to "#{pet.pet_name} on app #{pet.application_id}", "/admin/applications/#{pet.application_id}" %>
    </p>
  <% end %>
<% end %>
</div>
